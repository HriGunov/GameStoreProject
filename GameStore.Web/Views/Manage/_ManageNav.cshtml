@using GameStore.Data.Models
@inject SignInManager<Account> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="@ManageNavPages.IndexNavClass(ViewContext) btn btn-outline-primary" asp-action="Index"><i class="fas fa-home mr-2"></i>Profile</a>
    </li>
    <li class="nav-item mt-1">
        <a class="@ManageNavPages.ChangeAvatarNavClass(ViewContext) btn btn-outline-primary" asp-action="ChangeAvatar"><i class="fas fa-user-ninja mr-2"></i>Change Avatar</a>
    </li>
    <li class="nav-item mt-1">
        <a class="@ManageNavPages.ChangePasswordNavClass(ViewContext) btn btn-outline-primary" asp-action="ChangePassword"><i class="fas fa-lock mr-2"></i>Password</a>
    </li>
    @if (hasExternalLogins)
    {
        <li class="nav-item mt-1">
            <a class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) btn btn-outline-primary" asp-action="ExternalLogins"><i class="fas fa-unlock mr-2"></i>External logins</a>
        </li>
    }
    <li class="nav-item mt-1">
        <a class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) btn btn-outline-primary" asp-action="TwoFactorAuthentication"><i class="fas fa-mobile mr-2"></i>Two-factor authentication</a>
    </li>
</ul>