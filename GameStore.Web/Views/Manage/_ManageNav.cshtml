@using GameStore.Data.Models
@using GameStore.Web.Views.Manage
@inject SignInManager<Account> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column">
    <li class="@ManageNavPages.IndexNavClass(ViewContext) nav-item"><a class="btn btn-outline-primary" asp-action="Index"><i class="fas fa-home mr-2"></i>Profile</a></li>    
    <li class="@ManageNavPages.IndexNavClass(ViewContext) nav-item mt-1"><a class="btn btn-outline-primary" asp-action="ChangeAvatar"><i class="fas fa-home mr-2"></i>Change Avatar</a></li>    
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext) nav-item mt-1"><a class="btn btn-outline-primary" asp-action="ChangePassword"><i class="fas fa-lock mr-2"></i>Password</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) nav-item mt-1"><a class="btn btn-outline-primary" asp-action="ExternalLogins"><i class="fas fa-unlock mr-2"></i>External logins</a></li>
    }
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) nav-item mt-1"><a class="btn btn-outline-primary" asp-action="TwoFactorAuthentication"><i class="fas fa-mobile mr-2"></i>Two-factor authentication</a></li>
</ul>