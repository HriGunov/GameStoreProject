@using GameStore.Data.Models
@using Microsoft.AspNetCore.Identity
@using GameStore.Web.Models
@model IList<ProductListingViewModel>
<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            if (!item.IsDeleted)
             {
                 <div class="card col-3 mr-4 mb-4">
                     <img class="card-img-top img-thumbnail img-fluid mt-3" src="~/images/products/@(item.ImageName ?? "card.png")" alt="@item.Name">
                     <div class="card-body">
                         <h4 class="card-title">@item.Name</h4>
                         <p class="card-text">
                             <span class="badge badge-pill badge-primary">Price: $@item.Price</span>
                             @if (!string.IsNullOrEmpty(item.Publisher))
                             {
                                 <span class="badge badge-pill badge-primary">Publisher: @item.Publisher</span>
                             }
                         </p>
                         <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Products" class="btn btn-primary"><i class="fas fa-search"></i> Details</a>
                     </div>
                 </div>
             }
        }
    </div>
</div>