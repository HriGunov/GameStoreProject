@using GameStore.Data.Models
@using Microsoft.AspNetCore.Identity
@using GameStore.Web.Models
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav bg-primary">
            <li class="btn-group">
                <button type="submit" asp-area="" asp-controller="ShoppingCart" asp-action="Index" title="Cart" class="btn btn-outline-light mr-2"><span class="fas fa-shopping-cart mr-2"></span>My Cart</button>
            </li>
            <li class="btn-group">
                <button type="button" class="btn dropdown-toggle btn-outline-light" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                    <span class="fas fa-hand-peace"></span> Hello @UserManager.GetUserName(User)!
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><span class="fas fa-home mr-2"></span> Your Profile</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="AddAccountToRole" title="Manage"><span class="fas fa-lock mr-2"></span> Make Admin</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="Administration" asp-controller="Home" asp-action="Index" title="Admin Control Panel"><span class="fas fa-unlock mr-2"></span> Admin Panel</a>
                    }
                    <div class="dropdown-divider"></div>
                    <button type="submit" form="logoutForm" class="dropdown-item"><span class="fas fa-sign-out-alt mr-2"></span> Log out</button>
                </div>
            </li>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav bg-primary">
        <li class="btn-group"><a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Register</a></li>
        <li class="btn-group"><a class="btn btn-outline-light ml-2" asp-area="" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Log in</a></li>
    </ul>
}