@using GameStore.Data.Models
@using Microsoft.AspNetCore.Identity
@using GameStore.Web.Models
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav bg-primary">
            <li class="btn-group">
                <button type="button" class="btn dropdown-toggle btn-outline-light" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                    Hello @UserManager.GetUserName(User)!
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage Profile"><span class="fas fa-home mr-2"></span> Your Profile</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index" title="Home"><span class="fas fa-lock mr-2"></span> Make Admin</a>
                </div>
            </li>
            <li class="btn-group">
                <button type="submit" form="logoutForm" class="btn btn-outline-light ml-2"><i class="fas fa-sign-out-alt"></i> Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav bg-primary">
        <li class="btn-group"><a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Register</a></li>
        <li class="btn-group"><a class="btn btn-outline-light ml-2" asp-area="" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Log in</a></li>
    </ul>
}